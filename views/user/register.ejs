<%- layout('layouts/boilerplate.ejs') %> 

<div class="loginForm">
    <form class="form-signin" id="register" action="/register" method="POST" onsubmit="return validatePassword()">
        <h1 class="h2 mb-3 font-weight-normal">Sign Up</h1>
        <p>Your username will be displayed publicly as it is attached to your offers.</p>
        <input type="text" id="username" class="form-control" name="username" placeholder="Username" required autofocus>
        <!-- <p>Your email is private and is only needed for resetting your password.</p> -->
        <input type="email" id="email" class="form-control" name="email" placeholder="Email address" required>
        <input type="password" id="password" class="form-control" name="password" placeholder="Password"  required>
        <!-- F端r dev ausgeschaltet, bei password einf端gen -->
        <!-- pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" -->
        <input type="password" id="password-ver" class="form-control" name="password-ver" placeholder="Verify Password" required>
        <button class="btn btn-lg btn-success btn-block" type="submit"><i class="bi bi-check2-circle"></i> Register now</button>
        <p><a class="link-secondary" href="/login">Already registered?</a></p>
    </form>
</div>


